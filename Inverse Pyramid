public class Pyramid {
    public static void main(String args[]){
        int i,j,n,sp,st;
        sp=0;
        st=7;
        for(i=0;i<5;i++){
            for(j=0;j<sp;j++)
                System.out.print("  ");
            for(j=0;j<st;j++)
                System.out.print("*"+" ");
            st-=2;
            sp++;
            System.out.println();
        }
    }
    
}
