import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);

        // write ur code here
        int n,i,j,sp=0;
        n=scn.nextInt();
        for(i=0;i<n;i++){
            for(j=0;j<sp;j++)
                System.out.print("\t");
             System.out.print("*\t");
             System.out.println();
             sp++;
        }

    }
}
