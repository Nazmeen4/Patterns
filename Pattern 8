import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);

        // write ur code here
        int n,i,j;
        n=scn.nextInt();
        for(i=0;i<n;i++){
            for(j=0;j<n-i-1;j++)
                System.out.print("\t");
            for(int k=j;k<n-i;k++)
                System.out.print("*\t");
            System.out.println();
        }

    }
}
